@model NYB.DeviceManagementSystem.ViewModel.WebUser
@{
    ViewBag.Title = "登录";
    Layout = "";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>登录</title>
    @Styles.Render("~/Content/Common/common.css")
    @{
        if (Request.RequestContext.RouteData.Values["controller"].ToString() == "WebMap")
        {
            <script src="@Url.Content("~/Scripts/base.js")" type="text/javascript"></script>
        }
    }

    <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"></script>

</head>
<body>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Account/LogOn.css")" />

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm())
    {
        <div class="prompt">
            @Html.ValidationSummary(true, "登录不成功。请更正错误并重试。")
        </div>
        <div class="logon-panel">
            <fieldset>
                <dl class="logon-controls">
                    <dt>
                        @Html.LabelFor(m => m.UserName)
                    </dt>
                    <dd>
                        <span class="inline-block">@Html.TextBoxFor(m => m.LoginName, new { tabIndex = 1 })</span>
                        @*<span class="inline-block">@Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe)</span>*@
                    </dd>
                    <dd>
                        @Html.ValidationMessageFor(m => m.LoginName)
                    </dd>
                    <dt>
                        @Html.LabelFor(m => m.Pwd)
                    </dt>
                    <dd>
                        @Html.PasswordFor(m => m.Pwd, new { tabIndex = 2 })
                        <input class="blue-button" type="submit" value="登录" tabindex="3" />
                    </dd>
                    <dd>
                        @Html.ValidationMessageFor(m => m.Pwd)
                    </dd>
                </dl>
            </fieldset>
        </div>

    }
    @if (false)
    {
        <script type="text/javascript" src="../../Scripts/jquery.js"></script>
    }

</body>
</html>
