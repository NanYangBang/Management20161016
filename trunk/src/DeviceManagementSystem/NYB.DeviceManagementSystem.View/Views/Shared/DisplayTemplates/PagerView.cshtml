    ShowPageIndexBox = true,
    ShowMorePagerItems = true,
    ShowNumericPagerItems = true,
    MaximumPageIndexItems = 20,
    PageIndexBoxType = PageIndexBoxType.DropDownList,
    ShowGoButton = false,
    CssClass = "inline-block fr mvcPager",
})
