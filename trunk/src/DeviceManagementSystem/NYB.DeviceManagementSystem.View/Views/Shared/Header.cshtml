
@*background-image:url(@Url.Content("~/" + NYB.DeviceManagementSystem.Common.SystemInfo.CurrentSystemLogo))*@
<script src="@Url.Content("~/Scripts/swfobject.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<link rel="stylesheet" href="~/Content/themes/jquery-ui.css">
<div class="header">
    <a href='@Url.Action(String.Empty, String.Empty)' title="回到主页">
        <div id="header-logo" class="header-logo">
            <h3 style="color:white;font-size:30px;">优稳运维管理系统</h3>
        </div>
    </a>
    <div class="header-message">
        <ul>
            <li><a href='@Url.Action(String.Empty, String.Empty)'>主页</a></li>
            <li><a id="resetPasswordRef" href="@Url.Action("ChangePassword", "Account")">修改密码</a></li>
            <li class="last-border">@Html.ActionLink("退出", "LogOff", "Account")</li>
        </ul>
        <p>
            @if (Request.IsAuthenticated) {
                <span>欢迎您, </span>@User.Identity.Name
            }</p>
    </div>

    <div id="passwordDialog">
        <form action="ResetPassword" method="post">
            <div class="common-details-panel">
                <h2>重置密码</h2>
                <fieldset>
                    <table class="operateTable">
                        <tr>
                            <td>
                                <b><em>*</em>密码</b>
                            </td>
                            <td>
                                @Html.Password("oldPasswordInput")
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b><em>*</em>密码</b>
                            </td>
                            <td>
                                @Html.Password("passwordInput")
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b><em>*</em>确认密码</b>
                            </td>
                            <td>
                                @Html.Password("confirmPasswordInput")
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </div>
            <div class="common-details-operation-panel">
                <p class="UpdatePile-btn">
                    <input type="submit" id="btnSave" value="保存" class="blue-button" />
                    <a class="link-after-button" href="@ViewBag.ReturnUrl">返回</a>
                </p>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    
    $("#passwordDialog").dialog({
        autoOpen: false,
        height: 300,
        width: 350,
        modal: true
    });

    $("#resetPasswordRef").click(function (e) {
        e.preventDefault();
        $("#passwordDialog").dialog("open");
  });
</script>
