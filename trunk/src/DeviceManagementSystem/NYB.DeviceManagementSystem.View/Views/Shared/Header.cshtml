@*@using Warrentech.Panda.Common*@
<div class="header">
    <a href='@Url.Action(String.Empty, String.Empty)' title="回到主页">
        <div style="background-image:url(@Url.Content("~/" + NYB.DeviceManagementSystem.Common.SystemInfo.CurrentSystemLogo))" class="header-logo">
        </div>
    </a>
    <div class="header-message">
        <ul>
            <li><a href='@Url.Action(String.Empty, String.Empty)'>主页</a></li>
            <li><a href="@Url.Action("ChangePassword", "Account")">修改密码</a></li>
            <li class="last-border">@Html.ActionLink("退出", "LogOff", "Account")</li>
        </ul>
        <p>
            @if (Request.IsAuthenticated) {
                <span>欢迎您, </span>@User.Identity.Name
            }</p>
    </div>
</div>
